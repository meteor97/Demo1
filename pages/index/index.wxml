<!--index.wxml-->
<view class="page">
<view class="page__bd">
        <view class="weui-panel weui-panel_access">
            
        <view class="weui-panel__bd">
                <navigator url="../detail/detail?url={{url}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active"wx:for="{{newsList}}" wx:for-index="idx" wx:for-item="news">
                    <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb" src="{{news.thumbnail_pic_s}}" />
                    </view>
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-media-box__title">{{news.title}}</view>
                        <view class="weui-media-box__desc">{{news.author_name}}  {{news.date}}</view>
                    </view>
                </navigator>
                
                
                
                
                
                
               
            </view>
         </view>
    </view>
</view>
